    "lint": "pnpm lint:format && pnpm lint:fix"
  },
  "dependencies": {
    "pinia": "^2.0.32",
    "vue": "^3.2.47",
    "@antv/g2plot": "^2.4.1",
    "@vueuse/core": "^9.3.0",
    "axios": "^0.24.0",
    "dayjs": "^1.11.3",
    "element-plus": "^2.3.4",
    "encoding-japanese": "^2.0.0",
    "nanoid": "^3.3.3",
    "papaparse": "^5.3.2",
    "tailwindcss": "^3.0.7",
    "ts-md5": "^1.2.11",
    "vue-dompurify-html": "^3.0.0",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
